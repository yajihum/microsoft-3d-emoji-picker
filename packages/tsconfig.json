{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "rootDir": "./src",
    "isolatedModules": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/__tests__/vitest.setup.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/tests/**"]
}
